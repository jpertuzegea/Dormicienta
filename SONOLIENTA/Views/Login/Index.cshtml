@model MODELOS_SONOLIENTA.BD.UsuariosModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SOÑOLIENTA | Bienvenido</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIGECOR | Bienvenido</title>

    <link href="~/Plantilla-Ins/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Plantilla-Ins/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Plantilla-Ins/css/plugins/toastr/toastr.min.css" rel="stylesheet">

    <link href="~/Plantilla-Ins/css/animate.css" rel="stylesheet">
    <link href="~/Plantilla-Ins/css/style.css" rel="stylesheet">
    <link href="~/Imagenes/pavicon.png" rel="icon">


    <!-- Mainly scripts -->
    <script src="~/Plantilla-Ins/js/jquery-2.1.1.js"></script>
    <script src="~/Plantilla-Ins/js/bootstrap.min.js"></script>
    <script src="~/Plantilla-Ins/js/plugins/toastr/toastr.min.js"></script>
    <script src="~/Js_Utilidades/Validacion_Doble_clic_Submit.js"></script>


</head>
<body class="gray-bg" oncontextmenu="return false">


    @if (ViewBag.Mensaje != null)
    {
        <script type="text/javascript">
            toastr.error("@ViewBag.Acceso", "@ViewBag.Mensaje");
        </script>
    }




    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <img width="190" src="~/Imagenes/LogoSigecor.png" alt>

            </div>
            <h3>Bienvenidos a Admin SOÑOLIENTA</h3>
            <p>
                Software para la Administracion de la tienda virtual Desarrollado por :
            </p>
            <p>Ing. Jorge Pertuz Egea</p>
            <h3>Inicio de Sesion</h3>

            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { onsubmit = "return  validar_doble_clic()" }))
            { // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez

                @Html.AntiForgeryToken()

              <div class="form-group">
                    @Html.EditorFor(model => model.cedula, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuario" } })
                </div> 

                <div class="form-group">
                    <input id="clave" name="clave" type="password" class="form-control" placeholder="Contraseña" required="">
                </div>

                <button type="submit" id="boton" name="boton" class="btn btn-primary block full-width m-b">Iniciar Sesion</button>

                <p class="text-muted text-center"><small>Jorge David Pertuz Egea.</small></p>
                <p class="text-muted text-center"><small> <b>CONTACTO CELULAR : </b> ( +57 ) 315 - 534 - 2264 </small></p>
            }

        </div>
    </div>

</body>
</html>



<script type="text/javascript">
    $("#usuarioRed").focus();
</script>
