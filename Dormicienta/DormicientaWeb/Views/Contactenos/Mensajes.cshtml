    {*@
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 align="center">Listado de Mensajes Recibidos</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre Completo
                                    </th>
                                    <th>
                                        Telefono
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Fecha Mensaje
                                    </th>
                                    <th>
                                        Asunto
                                    </th>
                                    <th>
                                        Mensaje
                                    </th> 
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreSolicitate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TelefonoSolicitante)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailSolicitante)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaSolicitud)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Asunto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Mensaje)
                                        </td>

                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        Nombre Completo
                                    </th>
                                    <th>
                                        Telefono
                                    </th>
