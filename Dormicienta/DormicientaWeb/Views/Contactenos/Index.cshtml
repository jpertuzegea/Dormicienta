@model DAO_SONOLIENTA.CONTACTENOS

@{
    Layout = null;
}

@using (Html.BeginForm("Index", "Contactenos", FormMethod.Post, new { onsubmit = "return  validar_doble_clic()"}))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez

    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 style="color:#1ab394" class="modal-title">Contactenos</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6 b-r">
                <h3 class="m-t-none m-b"></h3>

                <div class="form-group">
                    <label>Nombre Completo</label>
                    @Html.EditorFor(model => model.NombreSolicitate, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Telefono Contacto</label>
                    @Html.EditorFor(model => model.TelefonoSolicitante, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label>Email Contacto</label>
                    @Html.EditorFor(model => model.EmailSolicitante, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Asunto </label>
                    @Html.EditorFor(model => model.Asunto, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Mensaje </label>
                    @Html.TextArea("Mensaje", null, new { @class = "form-control", @onkeyup = "UpperCase(this)", @rows = "4" }) 
                </div>

            </div>

            <div class="col-sm-6 ">
                <br>
                <hr />
                <h3>
                    Pedidos
                </h3>
                <div class="form-group" style="color:#1ab394">
                    <img width="40" height="30" src="~/Imagenes/Email.jpg" />  @ViewBag.CorreoContacto
                </div>

                <div class="form-group" style="color:#1ab394">
                    <img width="40" height="40" src="~/Imagenes/WhatsApp.png" />  @ViewBag.TelefonoContacto
                </div>
                <a href="#" class="pull-left">
                    <img src="~/Imagenes/Email_Icon.jpg" width="80%" alt="" />
                </a>
            </div>
            <div class="col-sm-4 ">      </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="boton" type="submit"><strong>Enviar</strong></button>
    </div>
}
