@model  DAO_SONOLIENTA.PRODUCTO

@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 style="color:#1ab394" class="modal-title">Detalles del Producto</h4>
</div>

@using (Html.BeginForm("ProductoUpdt", "Producto", FormMethod.Post, new { onsubmit = "return  ValidarDobleClic()", enctype = "multipart/form-data" }))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez

    <div class="modal-body">
        <div class="row">

            <div class="form-group" align="center">
                <img width="350" height="350" src="@Url.Action("VerImagen", "Producto", new { ProductoId = Model.ProductoId })" />
            </div>

            <div class="col-sm-6 b-r">
                <h3 class="m-t-none m-b"></h3>

                <div class="form-group">
                    <label>Categoria </label>
                    @Html.EditorFor(model => model.CATEGORIA.Nombre, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = true } })
                </div>

                <div class="form-group">
                    <label>Nombre </label>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = true } })
                </div>

                <div class="form-group">
                    <label>Codigo </label>
                    @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = true } })
                </div>

                <hr />
                <h3>
                    Pedidos
                </h3>


                <div class="form-group" style="color:#1ab394">
                    <img width="40" height="30" src="~/Imagenes/Email.jpg" />  @ViewBag.CorreoContacto
                </div>

                <div class="form-group" style="color:#1ab394">
                    <img width="40" height="40" src="~/Imagenes/WhatsApp.png" />  @ViewBag.TelefonoContacto
                </div>


                @*<div class="form-group">
           <label>Precio </label>
           <input type="text" class="form-control" disabled="true" value="$ @String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,0}", Model.Precio)" />
        </div>*@

            </div>
            <div class="col-sm-6 ">
                <br>

                <div class="form-group">
                    <label>Descripcion </label>
                    @Html.TextArea("Descripcion", null, new { @class = "form-control", @onkeyup = "UpperCase(this)", @rows = "15", @disabled = true })
                </div> 

            </div>


            <div class="col-sm-4 ">      </div>
        </div>
    </div>

    <div class="modal-footer">
        @*<button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="BotonRegistrar" type="submit"><strong>Matricularse</strong></button>*@
    </div>
}